@model WebApplicationEFCore02.Models.Pais

@{
    ViewData["Title"] = "Países";
}

<h2>Lista de @ViewData["Title"]</h2>
<hr />
<form asp-controller="Paises" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div class="form group">
        <div class="row">

            <div asp-validation-summary="ModelOnly"></div> <!-- permite exibir as mensagens de erro-->

            <div class="col-xs-12 cols-sm-6 col-md-6 col-lg-4">
                <label asp-for="Nome" class="control-label"></label>
                <select asp-for="Id"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListaPaises, "Id", "Nome"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <input type="submit" id="Submit1" value="Enviar" />
        </div>
    </div>
    <div class="form group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if (ViewBag.ValorSelecionado != null)
                {
                    <text>País selecionado => ID</text> @ViewBag.ValorSelecionado;
                }
            </div>
        </div>
    </div>
</form>