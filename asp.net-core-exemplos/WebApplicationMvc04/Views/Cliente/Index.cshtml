<!-- Com HtmlHelpers-->
Com HtmlHelpers

@{
    var listaPaises = new List<SelectListItem>()
{
        new SelectListItem() { Value="1", Text="Brasil"},
        new SelectListItem() { Value="2", Text="Portugal"},
        new SelectListItem() { Value="3", Text="Angola"}
    };
}

@using (Html.BeginForm("Index", "Cliente", FormMethod.Post))
{
    @Html.Label("Id")
    @Html.TextBox("Id")
    <br />
    @Html.Label("Nome")
    @Html.TextBox("Nome")
    <br />
    @Html.Label("Email")
    @Html.TextBox("Email")
    <br />

    <!--Exemplos-->
    @Html.Label("Senha")
    @Html.Password("Senha")
    <br />
    @Html.Label("Masculino")
    @Html.RadioButton("Sexo", "Masculino")
    @Html.Label("Feminino")
    @Html.RadioButton("Sexo", "Feminino")
    <br />
    @Html.Label("Lembrar")
    @Html.CheckBox("Lembrar")
    <br />
    <!--Lista suspensa-->
    @Html.Label("Pais")
    @Html.DropDownList("Pais", listaPaises)
    <br />
    <button type="submit">Salvar</button>
}

