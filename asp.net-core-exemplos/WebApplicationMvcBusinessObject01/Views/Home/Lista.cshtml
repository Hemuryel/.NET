@model IEnumerable<WebApplicationMvcBusinessObject01.Models.Aluno>

@*{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <p>
        @using (Html.BeginForm("Procurar", "Home", FormMethod.Get))
        {
            <b>Procurar por:</b>
            @Html.RadioButton("procurarPor", "Nome", true)<text>Nome</text>
            @Html.RadioButton("procurarPor", "Email", false)<text>Email</text><br />
            @Html.TextBox("criterio")<input type="submit" value="Procurar" />
        }
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        using (Html.BeginForm("Delete", "Home", new { id = item.Id } ))
        { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    <input type="submit" value="Deletar JS" 
                           onclick="return confirm('Confirma exclusão @item.Nome?')"; />
                </td>
            </tr>
        }
    }
    </tbody>
</table>
</body>
</html>
