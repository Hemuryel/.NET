@{
    ViewData["Title"] = "Home Page";
}
@inject WebApplicationViewInjection01.Services.EstadosService estados
@inject WebApplicationViewInjection01.Services.TimesService times

<h1>ASP .NET Core - View Injection</h1>
<hr />
<h3>Lista de Times</h3>
<ul>
    @foreach(var nome in times.GetTimes())
    {
        <li>@nome</li>
    }
</ul>
<br />
<br />
Estado: @Html.DropDownList("Estados", estados.GetEstados().Select(
            e => new SelectListItem()
            {
                Text = e.Nome,
                Value = e.Sigla
            }))